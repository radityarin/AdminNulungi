<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageSumbangan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/backbutton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/ic_chevron_left_black_24dp"
                android:backgroundTint="@android:color/white" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/urlbarang"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pantifoto" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/trending_gradient_shape_2" />.

            </FrameLayout>

        </RelativeLayout>


        <TextView
            android:id="@+id/namabarang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:text="Baju A"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="8dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>


        <TextView
            android:id="@+id/titlenamadonatur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTint="@color/colorPrimary"
            android:paddingHorizontal="16dp"
            android:text="Nama Donatur"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/namaorang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:text="Raditya Rinandyaswara"
            android:textColor="@android:color/black"
            android:textSize="16dp" />


        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="8dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/titletanggaldonasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTint="@color/colorPrimary"
            android:paddingHorizontal="16dp"
            android:text="Tanggal Donasi"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/tanggaldonasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:drawableTint="@color/colorPrimary"
            android:paddingHorizontal="16dp"
            android:text="20 April"
            android:textColor="@android:color/black"
            android:textSize="16dp" />


        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="8dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>


        <TextView
            android:id="@+id/titlemetode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTint="@color/colorPrimary"
            android:paddingHorizontal="16dp"
            android:text="Metode"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/metode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:drawableTint="@color/colorPrimary"
            android:paddingHorizontal="16dp"
            android:text="Diantar"
            android:textColor="@android:color/black" />


        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="8dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/titlealamatdonatur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTint="@color/colorPrimary"
            android:paddingHorizontal="16dp"
            android:text="Alamat Donatur"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/alamatdonatur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:drawableTint="@color/colorPrimary"
            android:paddingHorizontal="16dp"
            android:text="Jlin aja dulu"
            android:textColor="@android:color/black" />


        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="8dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/titlestatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTint="@color/colorPrimary"
            android:paddingHorizontal="16dp"
            android:text="Status saat ini"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/statusdonasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_weight="1"
            android:text="Diproses"
            android:textColor="@android:color/black"
            android:textSize="16dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@+id/konfirmasibutton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:layout_weight="3"
            android:background="@drawable/buttonkonfirm"
            android:text="Konfirmasi"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>
</ScrollView>